    @model IEnumerable<ProductsCrud.Models.Product>

    @{
        ViewData["Title"] = "Read Products";
    }

    <div class="text-center">
    <h1>Products</h1>
    </div>

    <p>
        <a class="btn btn-primary" asp-action="Create">Create New Product</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@item.Price.ToString("C0", new System.Globalization.CultureInfo("es-CO"))</td>
                <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                <td>
                    <img src="@item.ImageUrl" width="100" height="100" alt="Product Image" />
                </td>
                <td >
                    <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">Update</a> 
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

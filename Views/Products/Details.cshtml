@model ProductsCrud.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h1>Product Details</h1>

<p>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</p>

<table class="table ">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.Id</td>
            <td>@Model.Name</td>
            <td>@Model.Description</td>
            <td>@Model.Price.ToString("C0", new System.Globalization.CultureInfo("es-CO"))</td>
            <td>@Model.Quantity</td>
            <td>
                <img src="@Model.ImageUrl" width="100" height="100" alt="Product Image" />
            </td>
        </tr>
    </tbody>
</table>
